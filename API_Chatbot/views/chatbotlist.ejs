<!DOCTYPE html>
<html lang="fr">

<head>
    <link rel="stylesheet" href="/stylesheets/style.css">
    <link rel="stylesheet" href="https://stackpath.bootstrapcdn.com/bootstrap/4.3.1/css/bootstrap.min.css" integrity="sha384-ggOyR0iXCbMQv3Xipma34MD+dH/1fQ784/j6cY/iJTQUOhcWr7x9JvoRxT2MZw1T" crossorigin="anonymous">
</head>

<body>

    <div>
        <h1>Bot List</h1>
        <ul>
            <% chatbotlist.forEach(function(bot) { %>
                <li>
                    <div style="display: flex;">
                        <b><%= bot.name %>  </b> 

                    </div>

                    <form action="/chat/<%= bot.name %>" method="post">
                        <%= //-- A REMPLACER PAR " %= bot.login % " %>
                        <input type="hidden" name="login" value="Romain" />
                        <input type="hidden" name="name" value="<%= bot.name %>" />
                        <input type="hidden" name="isFirstAccess" value="yes" />
                        <input type="submit" class="btn btn-primary" value="chat" />
                    </form>

                    <p>

                </li>
            <% }); %>
        </ul>
    </div>

    <div>

        <p></p>

        <form action="/chat" method="post">
            <input type="hidden" name="action" value="eraseDB" />
            <input type="submit" value="erase DB" />
        </form>
        <form action="/chat" method="post">
            <input type="hidden" name="action" value="createBot" />
            <input type="submit" value="create bot" />
        </form>
        <form action="/chat" method="post">
            <input type="hidden" name="action" value="editBot" />
            <input type="submit" value="edit bot" />
        </form>
        <form action="/chat" method="post">
            <input type="hidden" name="action" value="printBrain" />
            <input type="submit" value="print brain" />
        </form>
        <form action="/chat" method="post">
            <input type="hidden" name="action" value="printAll" />
            <input type="submit" value="print all brains" />
        </form>
    </div>

</body>

</html>